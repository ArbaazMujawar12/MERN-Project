<% layout("/layout/boilerplate") %>

<div class="row justify-content-center mx-0 mt-3 mt-md-5">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 px-3">
        <form method="post" action="/login" class="needs-validation" novalidate>
            <h1 class="text-center mb-4 mb-md-5">Login</h1>
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" id="username" required>
                <div class="invalid-feedback">
                    Please enter your username.
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" id="password" required>
                <div class="invalid-feedback">
                    Please enter your password.
                </div>
            </div>

            <div class="mb-3 mt-4">
                <button class="btn btn-log-page w-100 py-2">Login</button>
            </div>

            <div class="text-center mt-3">
                <p class="mb-0">Don't have an account? <a href="/register" class="text-decoration-none">Register Here</a></p>
            </div>
            
        </form>
    </div>
</div>