<% layout("/layout/boilerplate") %>

<body>
    <div class="row offset-3">
    <div class="col-8">
        <br>
    <h3>Create a new listing : </h3>
    <form method="post" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter the Title" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter a valid Title.
            </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter the description" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Enter a valid Description.
            </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image-Link</label>
            <input name="listing[image]" placeholder="Enter URL" type="text" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter the price"  class="form-control" type="number" required>
                <div class="invalid-feedback">
                    Enter a valid Price.
                </div>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter the location" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Enter a valid Location.
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter the country" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter a valid Country.
            </div>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary add-btn col-8 offset-2">Add !</button>
        </div>
        
    </form>
</div>
</div>

</body>