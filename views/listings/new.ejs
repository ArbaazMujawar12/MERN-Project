<% layout("/layout/boilerplate") %>

<body>
    <div class="row justify-content-center mx-0">  <!-- Removed fixed offset, added justify and removed margin -->
        <div class="col-12 col-md-10 col-lg-8 px-3">  <!-- Responsive columns with padding -->
            <h3 class="mt-3">Create a new listing:</h3>
            <form method="post" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter the Title" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter a valid Title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter the description" type="text" class="form-control" required rows="4"></textarea>  <!-- Added rows attribute -->
                    <div class="invalid-feedback">
                        Enter a valid Description.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image-Link</label>
                    <input name="listing[image]" placeholder="Enter URL" type="text" class="form-control">
                </div>

                <div class="row g-2">  <!-- Added gutter spacing -->
                    <div class="mb-3 col-12 col-md-6">  <!-- Changed to col-12 for mobile -->
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter the price" class="form-control" type="number" required>
                        <div class="invalid-feedback">
                            Enter a valid Price.
                        </div>
                    </div>
            
                    <div class="mb-3 col-12 col-md-6">  <!-- Changed to col-12 for mobile -->
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Enter the location" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter a valid Location.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter the country" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter a valid Country.
                    </div>
                </div>

                <div class="mb-3 d-grid">  <!-- Changed to d-grid for full-width button -->
                    <button class="btn btn-primary add-btn">Add !</button>  <!-- Removed fixed column sizing -->
                </div>
            </form>
        </div>
    </div>
</body>